bindsym $mod+Mod1+c exec --no-startup-id "echo 6695 | sudo -S kill -a conky"
bindsym $mod+Control+c exec --no-startup-id "conky -c ~/.config/conky/conky.conf"
bindsym $mod+Mod1+p exec --no-startup-id  "echo 6695 | sudo -S kill -a picom"
